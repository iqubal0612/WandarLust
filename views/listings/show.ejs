<%- layout("/layouts/boilerplate") %>
<body>
    
<div class="row">
<div class="col-8 offset-3 mt-3">
        <h3>Listing Details</h3>
    </div>

    <div class="card col-6 offset-3 show-card">
        <img src="<%= listings.image %>" 
        class="card-img-top show-img" alt="listing image">

       <div class="card-body">
        <p class="card-text">
            <b><%= listings.title  %></b><br>
        <%= listings.description  %> <br>
        &#8377; <%= listings.price.toLocaleString("en-IN")  %><br>
        <%= listings.location  %><br>
        <%= listings.country  %>
        </p>
        </div>

    </div>
    
    <div class="btns mb-3">
        <a href="/listings/<%= listings._id %>/edit" 
            class="btn btn-dark  col-1 offset-3 add-btn">Edit 
        </a>
        <form method="post" action="/listings/<%= listings._id %>?_method=Delete" >
            <button  class="btn btn-dark  offset-5"> Delete </button>
        </form>
    </div>
    
</div>

</body>