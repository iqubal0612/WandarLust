<%- layout("/layouts/boilerplate") %>
<body>
<div class="row mt-3"></div>
  <div class="col-8 offset-2"><br>
    <h3>Edit Your List</h3>
    <form method="post" action="/listings/<%= listings._id %>?_method=PUT">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="title" value="<%= listings.title %>" type="text" class="form-control">
        </div>
       
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description"   value="<%= listings. description %>" class="form-control"></textarea>
        </div>
         
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="image"  value="<%= listings.image %>" type="text"  class="form-control">
        </div>

        <div class="row">
            <div class="mb-3  col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="price"  value="<%= listings.price %>" type="number"  class="form-control">
           </div>

           <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="country"  value="<%= listings.country %>" type="text" class="form-control">
            </div>
        </div>
       
        <div class="mb-3 col-md-4">
            <label for="location" class="form-label">Location</label>
            <input name="location"  value="<%= listings.location %>" type="text" class="form-control" >
        </div>
        
      
       <br>
        <button class="btn btn-dark add-btn mt-3">Edit</button>
        <br><br>
    </form>
  </div>
</div>
</body>
